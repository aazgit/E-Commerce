@model UniversalIntegrationMiddleware.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6">Dashboard</h1>
        <p class="text-muted">Overview of your integration middleware system</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Active Connectors</h5>
                <h2 class="display-4">@Model.ActiveConnectorsCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Active Flows</h5>
                <h2 class="display-4">@Model.ActiveFlowsCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Jobs Today</h5>
                <h2 class="display-4">@Model.TotalJobsToday</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">Failed Jobs</h5>
                <h2 class="display-4">@Model.FailedJobsCount</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Jobs</h5>
                <a asp-controller="Job" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentJobs.Any())
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Started</th>
                                <th>Status</th>
                                <th>Success</th>
                                <th>Failed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model.RecentJobs)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Job" asp-action="Details" asp-route-id="@job.Id">#@job.Id</a>
                                    </td>
                                    <td>@job.StartedAt.ToString("g")</td>
                                    <td>
                                        @switch (job.Status)
                                        {
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Success:
                                                <span class="badge bg-success">Success</span>
                                                break;
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Failed:
                                                <span class="badge bg-danger">Failed</span>
                                                break;
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Running:
                                                <span class="badge bg-info">Running</span>
                                                break;
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Pending:
                                                <span class="badge bg-secondary">Pending</span>
                                                break;
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.PartialSuccess:
                                                <span class="badge bg-warning">Partial</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-success">@job.SuccessCount</td>
                                    <td class="text-danger">@job.FailureCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No recent jobs</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Connectors</h5>
                <a asp-controller="Connector" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentConnectors.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var connector in Model.RecentConnectors)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@connector.Name</strong>
                                    <br />
                                    <small class="text-muted">@connector.Platform</small>
                                </div>
                                @if (connector.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No connectors configured</p>
                }
            </div>
        </div>
    </div>
</div>
