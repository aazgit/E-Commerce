@model UniversalIntegrationMiddleware.ViewModels.JobListViewModel
@{
    ViewData["Title"] = "Job Runs";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6">Job Runs</h1>
        <p class="text-muted">Monitor and manage job executions</p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0">Filters</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All Statuses</option>
                    @foreach (var status in Enum.GetValues<UniversalIntegrationMiddleware.Models.Enums.JobStatus>())
                    {
                        <option value="@status" selected="@(Model.StatusFilter == status)">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" class="form-control" value="@Model.StartDateFilter?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" class="form-control" value="@Model.EndDateFilter?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Filter</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Jobs.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Flow</th>
                        <th>Started</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Success</th>
                        <th>Failed</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.Jobs)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@job.Id">#@job.Id</a>
                            </td>
                            <td>
                                <a asp-controller="Flow" asp-action="Details" asp-route-id="@job.FlowId">@job.FlowName</a>
                            </td>
                            <td>@job.StartedAt.ToString("g")</td>
                            <td>
                                @if (job.Duration.HasValue)
                                {
                                    @if (job.Duration.Value.TotalMinutes >= 1)
                                    {
                                        @($"{job.Duration.Value.Minutes}m {job.Duration.Value.Seconds}s")
                                    }
                                    else
                                    {
                                        @($"{job.Duration.Value.Seconds}s")
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">In progress...</span>
                                }
                            </td>
                            <td>
                                @switch (job.Status)
                                {
                                    case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Success:
                                        <span class="badge bg-success">Success</span>
                                        break;
                                    case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Failed:
                                        <span class="badge bg-danger">Failed</span>
                                        break;
                                    case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Running:
                                        <span class="badge bg-info">Running</span>
                                        break;
                                    case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Pending:
                                        <span class="badge bg-secondary">Pending</span>
                                        break;
                                    case UniversalIntegrationMiddleware.Models.Enums.JobStatus.PartialSuccess:
                                        <span class="badge bg-warning">Partial</span>
                                        break;
                                }
                            </td>
                            <td class="text-success">@job.SuccessCount</td>
                            <td class="text-danger">@job.FailureCount</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <p class="text-muted mb-0">No job runs found matching your criteria.</p>
            </div>
        }
    </div>
</div>
