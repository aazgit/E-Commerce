@model UniversalIntegrationMiddleware.ViewModels.MappingViewModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Create Mapping" : "Edit Mapping";
}

<div class="row">
    <div class="col-12">
        <h1 class="display-6 mb-4">@(Model.Id == 0 ? "Create" : "Edit") Mapping Template</h1>

        <form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" asp-route-id="@(Model.Id > 0 ? Model.Id : null)" method="post">
            @Html.AntiForgeryToken()
            @if (Model.Id > 0)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Basic Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Shopify Order to D365 Sales Order" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Source Schema (JSON)</h5>
                        </div>
                        <div class="card-body">
                            <textarea asp-for="SourceSchema" class="form-control font-monospace" rows="12" placeholder='{
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" }
  }
}'></textarea>
                            <span asp-validation-for="SourceSchema" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Target Schema (JSON)</h5>
                        </div>
                        <div class="card-body">
                            <textarea asp-for="TargetSchema" class="form-control font-monospace" rows="12" placeholder='{
  "type": "object",
  "properties": {
    "OrderId": { "type": "string" },
    "CustomerName": { "type": "string" }
  }
}'></textarea>
                            <span asp-validation-for="TargetSchema" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Transformation Rules (JSON)</h5>
                </div>
                <div class="card-body">
                    <textarea asp-for="TransformationRules" class="form-control font-monospace" rows="10" placeholder='{
  "OrderId": "$.name",
  "CustomerName": "$.customer.name",
  "TotalAmount": "$.total_price"
}'></textarea>
                    <span asp-validation-for="TransformationRules" class="text-danger"></span>
                    <small class="text-muted">Use JSONPath expressions to map source fields to target fields.</small>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Create Mapping" : "Save Changes")</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
