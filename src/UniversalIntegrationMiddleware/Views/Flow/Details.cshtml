@model UniversalIntegrationMiddleware.ViewModels.FlowDetailsViewModel
@{
    ViewData["Title"] = "Flow Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6">@Model.Name</h1>
        <p class="text-muted">Flow Details and Execution History</p>
    </div>
    <div>
        <form asp-action="RunNow" asp-route-id="@Model.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success" @(Model.IsEnabled ? "" : "disabled")>Run Now</button>
        </form>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Flow Configuration</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsEnabled)
                        {
                            <span class="badge bg-success">Enabled</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Disabled</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Flow Type</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.FlowType</span>
                    </dd>

                    <dt class="col-sm-4">Source</dt>
                    <dd class="col-sm-8">@Model.SourceConnectionName</dd>

                    <dt class="col-sm-4">Target</dt>
                    <dd class="col-sm-8">@Model.TargetConnectionName</dd>

                    <dt class="col-sm-4">Mapping</dt>
                    <dd class="col-sm-8">@(Model.MappingTemplateName ?? "None")</dd>

                    <dt class="col-sm-4">Schedule</dt>
                    <dd class="col-sm-8">@(Model.ScheduleDescription ?? "Manual")</dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Job Runs</h5>
                <a asp-controller="Job" asp-action="Index" asp-route-flowId="@Model.Id" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentJobs.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Started</th>
                                <th>Status</th>
                                <th>Records</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model.RecentJobs)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Job" asp-action="Details" asp-route-id="@job.Id">
                                            @job.StartedAt.ToString("g")
                                        </a>
                                    </td>
                                    <td>
                                        @switch (job.Status)
                                        {
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Success:
                                                <span class="badge bg-success">Success</span>
                                                break;
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Failed:
                                                <span class="badge bg-danger">Failed</span>
                                                break;
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.Running:
                                                <span class="badge bg-info">Running</span>
                                                break;
                                            case UniversalIntegrationMiddleware.Models.Enums.JobStatus.PartialSuccess:
                                                <span class="badge bg-warning">Partial</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@job.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <span class="text-success">@job.SuccessCount</span> /
                                        <span class="text-danger">@job.FailureCount</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted mb-0">No job runs yet.</p>
                }
            </div>
        </div>
    </div>
</div>
